{
  "name": "frontconsole",
  "version": "0.0.1",
  "description": "Super handy console tool for your web app. No external dependencies.",
  "main": "src/frontconsole.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css": "./node_modules/.bin/lessc --clean-css ./src/frontconsole.less ./build/frontconsole.css",
    "build": "./node_modules/.bin/babel src -d build --source-maps && npm run css",
    "watch": "watch 'npm run build' ./src",
    "reload": "./node_modules/.bin/live-server --no-browser --watch=./build,./demo --open=./demo",
    "watch-and-reload": "npm run watch && npm run reload"
  },
  "author": "zorzysty",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "live-server": "^1.1.0",
    "watch": "^1.0.1"
  }
}
