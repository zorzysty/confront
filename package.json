{
  "name": "confront",
  "version": "0.8.2",
  "description": "Fully customizable CLI for the web apps",
  "main": "dist/confront.js",
  "scripts": {
    "css": "./node_modules/.bin/lessc --clean-css ./src/confront.less ./dist/confront.css",
    "build": "./node_modules/.bin/rimraf dist && npm run css && ./node_modules/.bin/webpack",
    "watch": "watch 'npm run build && npm run start' ./src ./demo",
    "start": "./node_modules/.bin/http-server",
    "demo": "cp ./dist/*.{js,css} ./demo"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zorzysty/confront.git"
  },
  "author": "zorza",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "http-server": "^0.9.0",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "rimraf": "^2.5.4",
    "watch": "^1.0.1",
    "webpack": "^1.13.3"
  }
}
