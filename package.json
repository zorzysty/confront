{
  "name": "confront",
  "version": "0.8.6",
  "description": "Fully customizable CLI for web apps",
  "main": "dist/confront.js",
  "scripts": {
    "css": "./node_modules/.bin/lessc --clean-css ./src/confront.less ./dist/confront.css",
    "clean": "./node_modules/.bin/rimraf ./dist./* && ./node_modules/.bin/rimraf ./build/*",
    "build": "npm run css && ./node_modules/.bin/webpack && mkdir -p ./build && cp ./src/{index.html,demo.css} ./build",
    "build:demo": "cp ./dist/confront.{js,css} ./demo && cp ./src/{demo.css,index.html} ./demo",
    "build:bundle": "npm run clean && npm run build && npm run build:demo && npm run uglify",
    "watch": "watch 'npm run build && npm run start' ./src",
    "start": "./node_modules/.bin/http-server",
    "uglify": "./node_modules/.bin/uglifyjs ./dist/confront.js --compress --mangle --output ./dist/confront.min.js",
    "publish:patch": "npm run build:bundle && npm version patch && npm publish",
    "publish:minor": "npm run build:bundle && npm version minor && npm publish",
    "publish:major": "npm run build:bundle && npm version major && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zorzysty/confront.git"
  },
  "author": "zorza",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "http-server": "^0.9.0",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "rimraf": "^2.5.4",
    "uglify-js": "^2.7.4",
    "watch": "^1.0.1",
    "webpack": "^1.13.3"
  }
}
